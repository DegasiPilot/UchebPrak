<UserControl x:Class="UchebPrak.Components.SotrudnikUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UchebPrak.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid Width="200">
        <Border BorderBrush="Black" BorderThickness="1" Margin="5">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Таб. номер</TextBlock>
                    <TextBlock Text="{Binding TabNomer}" Margin="5 0 0 0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Кафедра шифр</TextBlock>
                    <TextBlock Text="{Binding Kafedra_Shifr}" Margin="5 0 0 0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Фамилия</TextBlock>
                    <TextBlock Text="{Binding Familia}" Margin="5 0 0 0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Должность</TextBlock>
                    <TextBlock Text="{Binding Dolgnost}" Margin="5 0 0 0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Зарпалата</TextBlock>
                    <TextBlock Text="{Binding Zarplata}" Margin="5 0 0 0"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock>Таб. номер шефа</TextBlock>
                    <TextBlock Text="{Binding Shef_Id}" Margin="5 0 0 0"></TextBlock>
                </StackPanel>
                <Button x:Name="RedactBtn" Margin="0 10 0 0" Click="RedactBtn_Click">Редактировать</Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
